aside.main-sidebar.sidebar-dark-primary.elevation-4
    //- Brand Logo
    a(href="index3.html").brand-link
        img(src="/admin/img/AdminLTELogo.png", alt="AdminLTE Logo", style="opacity: .8").brand-image.img-circle.elevation-3 
        span.brand-text.font-weight-light AdminLTE 3

    //- Sidebar
    .sidebar 
        //- Sidebar user panel (optional)
        .user-panel.mt-3.pb-3.mb-3.d-flex
            .image
                img(src="/admin/img/user2-160x160.jpg", alt="User Image").img-circle.elevation-2
            .info
                a(href="#").d-block Alexander Pierce

        //-  SidebarSearch Form
        .form-inline
            div(data-widget="sidebar-search").input-group 
                input(type="search", placeholder="Search", aria-label="Search").form-control.form-control-sidebar 
                .input-group-append
                    button.btn.btn-sidebar
                        i.fas.fa-search.fa-fw

        //- Sidebar Menu
        nav.mt-2
            ul(data-widget="treeview", role="menu", data-accordion="false").nav.nav-pills.nav-sidebar.flex-column 
